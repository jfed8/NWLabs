
@{
    ViewBag.Title = "Quote";
}

<link rel="stylesheet" type="text/css" href="~/Content/formbox.css">



<br />
<h3>Quote</h3>
<br />
<p>You have requested a quote for the Lipoxygenase Assay, please select your compound below.</p>

<br />
<br />

@*Form for the user to select the compound and request a quote*@


<form class="cf">
    <div class="half left cf">
        <p id="selected"><b>Assay:</b> @ViewBag.Assay </p>
        <p id="selected"><b>Compound:</b> @Html.DropDownList("Compound") </p>
        <input type="text" id="input-name" placeholder="if Other, please specify">
        <input type="email" id="input-email" placeholder="Contact Email">
    </div>
    <div class="half right cf">
        <textarea name="message" type="text" id="input-message" placeholder="Additional Comments"></textarea>
        <br />
        <a class="btn btn-block right" id="input-submit" href="@Url.Action("ConfirmedQuote", "Catalog")" style="font-family: 'Merriweather', sans-serif; height: 50px; width: 94%; border-radius: 8px;">Request Quote</a>
    </div>
    
</form>



